<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UrbanCarry-Shop</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full h-screen bg-gray-300 flex">
      <!-- Sidebar -->
      <div
        class="sidebar w-1/4 bg-black text-white flex flex-col items-center p-5 justify-between"
      >
        <div class="flex flex-col items-center p-5">
          <h2 class="text-2xl font-bold mb-6">Urban Carry</h2>
          <ul class="space-y-4">
            <li>
              <a href="#" class="block text-center hover:text-gray-400"
                >New Collection</a
              >
            </li>
            <li>
              <a href="#" class="block text-center hover:text-gray-400"
                >All Products</a
              >
            </li>
            <li>
              <a href="#" class="block text-center hover:text-gray-400"
                >Discounted Products</a
              >
            </li>
          </ul>
        </div>
        <div class="flex flex-col items-center p-5">
          <div class="flex items-center p-5">
            <h2>Sort by:</h2>
            <form action="/shop/sort">
              <select
                class="ml-5 px-4 py-2 bg-zinc-900 rounded-md outline-none border-none"
                name="sortby"
                id=""
              >
                <option value="popular">Popular</option>
                <option value="newest">Newest</option>
              </select>
            </form>
          </div>
          <!-- <div class="flex items-center p-5">
            <h2>Filter by:</h2>
            <form action="/shop/filter">
              <select
                class="ml-8 px-4 py-2 bg-zinc-900 rounded-md outline-none border-none"
                name="sortby"
                id=""
              >
                <option value="availability">Availability</option>
                <option value="discount">Discount</option>
              </select>
            </form>
          </div> -->
        </div>
        <div class="flex flex-col items-center p-5">
          <ul class="space-y-4">
            <li>
              <a class="block text-center hover:text-gray-400" href="#"
                >Profile</a
              >
            </li>
            <li>
              <a
                class="block text-center text-red-700 font-bold hover:text-red-600"
                href="/users/logout"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
      <!-- Main Content Area -->
      <div class="content w-3/4 p-5 flex justify-center overflow-y-scroll">
        <div class="flex items-start gap-5">
          <% products.forEach(product => { %>

          <div class="w-60 bg-red-500">
            <div
              class="w-full h-52 flex justify-center items-center bg-[<%= product.bgColor %>]"
            >
              <img
                class="h-[12rem]"
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                alt="<%= product.name %>"
              />
            </div>
            <div
              class="flex justify-between bg-[<%= product.panelColor %>] items-center px-4 py-4 text-[<%= product.textColor %>]"
            >
              <div>
                <h3><%= product.name %></h3>
                <h4>â‚¹ <%= product.price %></h4>
              </div>
              <a
                class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                href=""
              >
                <i class="ri-add-line"></i>
              </a>
            </div>
          </div>

          <% }) %>
        </div>

        <!-- Add more image containers as needed -->
      </div>
    </div>
  </body>
</html>
